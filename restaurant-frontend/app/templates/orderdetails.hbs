                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">{{#link-to "orderdetails" order.id}}Order ID: {{order.id}}{{/link-to}}</h3>
                            <span>{{format-date order.placeDate}}</span>
                        </div>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No orders found.</p>
                {{/if}} --}}
            </div>
        </div>
    </div>
</div>