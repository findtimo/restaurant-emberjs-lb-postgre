{{! @glint-nocheck }}
<legend
  class="
    {{if @invisibleLabel (if (macroCondition (macroGetOwnConfig "isBS5")) "visually-hidden" "sr-only")}}
    {{@labelClass}}
    {{if this.isHorizontalAndNotCheckbox "col-form-label"}}
    {{if this.isHorizontal (bs-size-class "col-form-label" @size)}}"
>
  {{#if (has-block)}}
    {{yield}}
  {{/if}}
  {{@label}}
</legend>