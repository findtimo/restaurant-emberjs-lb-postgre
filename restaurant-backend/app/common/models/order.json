{
  "name": "order",
  "plural": "orders",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "placeDate": {
      "type": "date",
      "required": true
    },
    "totalPrice": {
      "type": "number",
      "required": true,
      "postgresql": {
        "dataType": "decimal",
        "precision": 10,
        "scale": 2
      }
    }
  },
  "validations": [],
  "relations": {
    "foods": {
      "type": "hasMany",
      "model": "food",
      "foreignKey": "orderId",
      "through": "orderfood"
    },
    "customer": {
      "type": "belongsTo",
      "model": "customer",
      "foreignKey": "customerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
